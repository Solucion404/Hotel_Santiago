---
import { RoomCard } from "../features/RoomCard";
import { Reveal } from "../ui/Reveal";

const rooms = [
    {
        title: "Suite Real",
        price: "$4,200",
        image: "/images/room-suite-real.jpg",
        features: ["WiFi Gratis", "Smart TV", "Clima", "Frigobar"],
    },
    {
        title: "Habitaci√≥n Sierra",
        price: "$2,800",
        image: "/images/room-sierra.jpg",
        features: ["WiFi Gratis", "Cafetera", "Clima", "Rain Shower"],
    },
    {
        title: "Junior Suite",
        price: "$3,500",
        image: "/images/room-junior-suite.jpg",
        features: ["WiFi Gratis", "Smart TV", "Clima", "King Size"],
    },
];
---

<section class="py-24 bg-white" id="habitaciones">
    <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
            <Reveal>
                <h2 class="font-serif text-4xl font-bold mb-4">
                    Habitaciones & Suites
                </h2>
            </Reveal>
            <div class="w-20 h-1 bg-gold mx-auto"></div>
        </div>
        <div class="grid md:grid-cols-3 gap-10">
            {
                rooms.map((room, index) => (
                    <Reveal key={room.title} delay={0.2 * index}>
                        <RoomCard {...room} />
                    </Reveal>
                ))
            }
        </div>
    </div>
</section>
