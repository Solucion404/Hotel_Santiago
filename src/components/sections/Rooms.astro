---
import RoomCard from "../features/RoomCard.astro"; // Migrado a .astro para optimización
import { Reveal } from "../ui/Reveal";

// IMPORTANTE PARA EL USUARIO:
// Mueve las imágenes de 'public/images/' a 'src/assets/images/' para que funcionen estas importaciones.
import matrimonialImg from "../../assets/images/room-matrimonial.jpg";
import dobleImg from "../../assets/images/room-doble.jpg";
import kingImg from "../../assets/images/room-king.jpg";
import suiteImg from "../../assets/images/room-suite.jpg";

const rooms = [
    {
        title: "Habitación Matrimonial",
        price: "$535.00",
        priceDetails: "+ IMPUESTOS",
        image: matrimonialImg,
        features: ["Wifi", "TV", "Ducha"],
    },
    {
        title: "Habitación Doble",
        price: "$650.00",
        priceDetails: "+ IMPUESTOS",
        image: dobleImg,
        features: ["Wifi", "TV", "2 Camas"],
    },
    {
        title: "Habitación King Size",
        price: "$650.00",
        priceDetails: "+ IMPUESTOS",
        image: kingImg,
        features: ["Wifi", "TV", "Cama King"],
    },
    {
        title: "Suite",
        price: "$890.00",
        priceDetails: "+ IMPUESTOS",
        image: suiteImg,
        features: ["Wifi", "TV", "Frigobar", "Sala de estar"],
    },
];
---

<section class="py-24 bg-white scroll-mt-32" id="habitaciones">
    <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
            <Reveal width="100%">
                <h2 class="font-serif text-4xl font-bold mb-4">
                    Nuestras Habitaciones
                </h2>
            </Reveal>
            <div class="w-20 h-1 bg-gold mx-auto"></div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {
                rooms.map((room, index) => (
                    <Reveal
                        key={room.title}
                        delay={0.1 * index}
                        width="100%"
                        className="h-full"
                    >
                        <RoomCard {...room} />
                    </Reveal>
                ))
            }
        </div>
    </div>
</section>
