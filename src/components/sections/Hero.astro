---
import { Image } from "astro:assets";
import { Button } from "../ui/Button";
import { Reveal } from "../ui/Reveal";

// Importación de imagen para optimización nativa
import heroBg from "../../assets/images/hero-bg.jpg";
---

<section
    class="relative h-screen w-full flex flex-col items-center justify-center overflow-hidden bg-neutral-900 text-center"
>
    <!-- Imagen de fondo optimizada -->
    <div class="absolute inset-0 z-0">
        <Image
            src={heroBg}
            alt="Hotel Santiago Hero"
            class="w-full h-full object-cover opacity-60"
            quality="high"
            densities={[1.5, 2]}
        />
        <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <div
        class="relative z-20 px-4 w-full max-w-4xl mx-auto flex flex-col items-center"
    >
        <Reveal delay={0.1} width="100%">
            <h1
                class="font-serif text-white text-5xl md:text-7xl font-bold mb-4 tracking-wide uppercase"
            >
                HOTEL SANTIAGO
            </h1>
        </Reveal>
        <Reveal delay={0.3} width="100%">
            <h2
                class="font-serif text-white/90 text-xl md:text-2xl font-light italic mb-8"
            >
                Tu refugio de paz en la Sierra de Chiapas
            </h2>
        </Reveal>
        <Reveal delay={0.5} width="100%">
            <div
                class="flex flex-col md:flex-row gap-4 justify-center items-center"
            >
                <Button variant="secondary" className="px-8 py-3 font-bold">
                    VER HABITACIONES
                </Button>
                <Button variant="outline" className="px-8 py-3 font-bold">
                    CONOCENOS
                </Button>
            </div>
        </Reveal>
    </div>
</section>
