---
import { MapPin } from "lucide-react";
---

<div class="relative w-full h-full group">
    <!-- Google Maps Iframe (Zero Config) -->
    <iframe
        width="100%"
        height="100%"
        frameborder="0"
        marginheight="0"
        marginwidth="0"
        title="Ubicación Exacta Hotel Santiago"
        scrolling="no"
        src="https://maps.google.com/maps?q=5MF8%2BGM+Yajal%C3%B3n%2C+Chiapas&t=&z=17&ie=UTF8&iwloc=&output=embed"
        style="filter: grayscale(0.3) contrast(1.1) opacity(0.9);"
        class="transition-all duration-700 group-hover:grayscale-0 group-hover:opacity-100"
    ></iframe>

    <!-- Botón GPS Overaly -->
    <a
        href="https://www.google.com/maps/search/?api=1&query=5MF8%2BGM+Yajal%C3%B3n%2C+Chiapas"
        target="_blank"
        rel="noopener noreferrer"
        class="absolute bottom-6 right-6 bg-white text-dark px-6 py-3 rounded-xl shadow-2xl text-sm font-bold hover:bg-gold hover:text-white transition-all transform hover:scale-105 flex items-center gap-2 z-10 border border-neutral-100"
    >
        <MapPin className="w-4 h-4" />
        ABRIR EN GPS
    </a>

    <!-- Overlay decorativo suave -->
    <div
        class="absolute inset-0 pointer-events-none border-[12px] border-white/10 rounded-2xl"
    >
    </div>
</div>
